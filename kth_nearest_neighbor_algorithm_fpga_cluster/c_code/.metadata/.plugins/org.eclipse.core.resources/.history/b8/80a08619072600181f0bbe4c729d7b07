#include "ethernet.h"

extern volatile int TcpFastTmrFlag;
extern volatile int TcpSlowTmrFlag;

void ethernet_accept()
{
	xil_printf("\nWaiting for connection\n");
	ACCEPTED_CONNECTION=0;
	/* receive and process packets */
	while (!ACCEPTED_CONNECTION) {
		if (TcpFastTmrFlag) {
			tcp_fasttmr();
			TcpFastTmrFlag = 0;
		}
		if (TcpSlowTmrFlag) {
			tcp_slowtmr();
			TcpSlowTmrFlag = 0;
		}
		xemacif_input(echo_netif);
	}
	xil_printf("TCP connection accepted\n");
}

void ethernet_send()
{
	int i;
	struct pbuf *p;

	for(i=0; i<ETH_PACKET_SIZE;i++) //fill packet
	{
		*(int *)p->payload=EDATA[i];
		p->len=sizeof(EDATA[i]);
		//tcp_recved(TCP_PCB, p->len);
		err_t err = tcp_write(TCP_PCB, p->payload, p->len, 1);
		//xil_printf("write err: %d\n", err);
		pbuf_free(p);
	}
	tcp_output(TCP_PCB); //send packet
	//xil_printf("output err: %d\n", err);
	xil_printf("done sending tcp packets\n");
}

void ethernet_receive()
{
	ETH_PACKETS_RECEIVED=0;

		/* receive and process packets */
		while (NUM_ETH_PACKETS!=ETH_PACKETS_RECEIVED) {
			if (TcpFastTmrFlag) {
				tcp_fasttmr();
				TcpFastTmrFlag = 0;
			}
			if (TcpSlowTmrFlag) {
				tcp_slowtmr();
				TcpSlowTmrFlag = 0;
			}
			xemacif_input(echo_netif);
		}
		xil_printf("done receiving tcp packets\n");
}

void print_app_header()
{
	xil_printf("\n\r\n\r-----lwIP TCP echo server ------\n\r");
	xil_printf("TCP packets sent to port 6001 will be echoed back\n\r");
}

err_t recv_callback(void *arg, struct tcp_pcb *tpcb, struct pbuf *p, err_t err)
{
	/* do not read the packet if we are not in ESTABLISHED state */
	if (!p) {
		tcp_close(tpcb);
		tcp_recv(tpcb, NULL);
		return ERR_OK;
	}

	/* indicate that the packet has been received */
	tcp_recved(tpcb, p->len);

	int i;
	for(i=0; i<ETH_PACKET_SIZE; i++) //take integers from payload and put into EDATA
	{
		EDATA[EDATA_INDEX]= *((int *)p->payload+i);
		EDATA_INDEX++;
	}

	pbuf_free(p);
	ETH_PACKETS_RECEIVED++;
	return ERR_OK;
}

err_t accept_callback(void *arg, struct tcp_pcb *newpcb, err_t err)
{
	static int connection = 1;

	/* set the receive callback for this connection */
	tcp_recv(newpcb, recv_callback);
	/* just use an integer number indicating the connection id as the
	   callback argument */
	tcp_arg(newpcb, (void*)(UINTPTR)connection);

	/* increment for subsequent accepted connections */
	connection++;
	TCP_PCB=newpcb;
	ACCEPTED_CONNECTION=1;
	return ERR_OK;
}


int start_application()
{
	err_t err;
	unsigned port = 7;
	struct tcp_pcb *pcb;
	/* create new TCP PCB structure */
	pcb = tcp_new();
	if (!pcb) {
		xil_printf("Error creating PCB. Out of Memory\n\r");
		return -1;
	}

	//need to CHANGe SO ONLY BINDS TO SPECEFIC IP
	err = tcp_bind(pcb, IP_ADDR_ANY, port);
	if (err != ERR_OK) {
		xil_printf("Unable to bind to port %d: err = %d\n\r", port, err);
		return -2;
	}

	/* we do not need any arguments to callback functions */
	tcp_arg(pcb, NULL);

	/* listen for connections */
	pcb = tcp_listen(pcb);
	if (!pcb) {
		xil_printf("Out of memory while tcp_listen\n\r");
		return -3;
	}

	/* specify callback to use for incoming connections */
	tcp_accept(pcb, accept_callback);


	//xil_printf("TCP echo server started @ port %d\n\r", port);

	return 0;
}


